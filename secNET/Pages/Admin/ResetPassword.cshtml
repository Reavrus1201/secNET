@page
@model secNET.Pages.Admin.ResetPasswordModel
@{
    ViewData["Title"] = "Admin - Reset Password";
}

<main id="main-content">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Reset Password</h1>
    </div>

    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-body">
            @if (Model.NewPassword != null)
            {
                <div class="alert alert-info" role="alert">
                    Password has been reset. The new password is: <strong>@Model.NewPassword</strong><br />
                    Please share this with the user.
                    <div class="d-flex justify-content-end mt-3">
                        <a asp-page="./Index" class="btn btn-sm btn-primary">Done</a>
                    </div>
                </div>
            }
            else
            {
                <h4>Reset Password for @Model.Username</h4>
                <p>Are you sure you want to reset the password for this user? This will generate a new password.</p>

                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-sm btn-primary mr-2">Reset Password</button>
                        <a asp-page="./Index" class="btn btn-sm btn-secondary">Cancel</a>
                    </div>
                </form>
            }
        </div>
    </div>
</main>